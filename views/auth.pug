extends base
block content

  section.auth
    .auth--div
      form(class='form__login')
        h3.h3 ادخل الي حسابك
        .username
          span البريد الالكتروني
          input(id='email__login' type='email', name='email', value='', placeholder='اكتب بريدك الالكتروني')
        .password
          span كلمه السر
          input(id='password__password' type='password', name='password', value='', placeholder='اكتب كلمه السر', min='8')
        .buttons
          button.btn__form(id='loginbtn' type='submit', name='button')
            | دخــــــــــــــول
        .foreget__password
          a(href='/forget') هل نسيت كلمه السر ؟
      form(class='form--signup signup--form')
        .text
          h3.h3 سجل الان
        .name
          span الاسم
          input#name(type='text', name='first-name', value='', placeholder='اكتب اسمك')
        .username
          span البريد الالكتروني
          input#email(type='email', name='email', value='', placeholder='اكتب بريدك الالكتروني')
        .username
          span رقم الهاتف
          input#phone(type='tel' name='phone' value='')
        .password
          span اكتب كلمه السر
          input#password(type='password', name='password', value='', min='8', placeholder='اكتب كلمه السر')
        .password
          span اعد كتابه كلمه السر
          input#passwordConfirm(type='password', name='password', value='', min='8', placeholder='اعد كتابه كلمه السر')
        .image__upload
          span الصوره
          label.label(for='photo') قم باختيار صوره
          input#photo.upload--input(type='file', value='')
        .buttons
          button.btn__form(type='submit', formaction='data.html', name='button')
            | سجــــــــــل
      .backToHome
        a(href='/auth?auth=login') سجل دخول
        a(href='/auth?auth=signup') انشاء حساب
