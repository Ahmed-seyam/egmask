doctype html
html(lang='ar', dir='rtl')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title ايجي ماسك
      link(rel='stylesheet', href='css/main.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.jpg')
      link(href='https://fonts.googleapis.com/css2?family=Amiri&display=swap', rel='stylesheet')
  body(data-alert=`${alert? alert : ''}`)
    //
      *********************** Start nav ********************************
    nav.nav__bar
      .logo--div
        img(src='img/logo.jpg', alt='')
      ul.nav--ul
        li
          a(href='/') الرئيسيه
        li
          a(href='/#about') معلومات عنا
        li
          a(href='/#products') المنتاجات
        li
          a(href='/soon') اسئله متكرره
        li
          a(href='/#contact') تواصل معنا
      .nav__buttons--div
        -if (!user)
          a(class="login__btn__nav" href="/auth") دخول
          a(class="signup__btn__nav" href="/signup") تسجيل
        -else
          a(class='nav__el--logout signout__btn__nav' href='') خروج
          a.user__btn__nav(href=`profile-${user.role}?q=data`)
            span= `${user.name.split(' ')[0]} |`
            img(src=`img/${user.locations ? 'promoters' : 'users'}/${user.photo}`, alt='')

    block content


